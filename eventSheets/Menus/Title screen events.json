							"parameters": {
								"first-value": "len(Browser.Hash)",
								"comparison": 0,
								"second-value": "6"
							}
						}
					],
					"actions": [
						{
							"id": "set-eventvar-value",
							"objectClass": "System",
							"sid": 966580108190078,
							"parameters": {
